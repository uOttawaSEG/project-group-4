<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#151A30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/sessionTutorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/sessionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="#E0E4FF" />

        <TextView
            android:id="@+id/pendingRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Role"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#AAAAAA" />

        <TextView
            android:id="@+id/sessionPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Phone"
            android:textColor="#CCCCCC" />

        <TextView
            android:id="@+id/tutorCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Program or Degree"
            android:textColor="#CCCCCC" />

        <TextView
            android:id="@+id/sessionTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tutorAcceptBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:text="Approve"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/white"
                android:foreground="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/cancelSessionBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:backgroundTint="#FF5C7A"
                android:text="Reject"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/white"
                android:foreground="?attr/selectableItemBackground" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
