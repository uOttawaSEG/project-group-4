<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/sessionStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sessionStudentEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Student Email"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/sessionStudentPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Phone" />

        <TextView
            android:id="@+id/sessionStudentProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="student Program" />

        <TextView
            android:id="@+id/sessionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session Status" />

        <TextView
            android:id="@+id/tutorViewTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session Time" />

        <TextView
            android:id="@+id/tutorViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session Date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tutorAcceptBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:backgroundTint="#3F51B5"
                android:text="Approve"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/tutorRejectBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#3F51B5"
                android:text="Reject"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>