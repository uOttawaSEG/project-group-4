<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#101526">

    <ImageView
        android:id="@+id/dashboardLogo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:alpha="0.95"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/dashboardLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/LogOutButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/logout_button_text"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF5C7A"
        android:onClick="goToLogOut"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome! Your role is:"
        android:textSize="16sp"
        android:textColor="#E0E4FF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dashboardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/user_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="role"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/inboxButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="View Inbox"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3D7AFD"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/user_role"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp" />

    <Button
        android:id="@+id/viewSessionsBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="View Sessions"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/inboxButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/viewCalendarButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="View Calendar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFB74D"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/viewSessionsBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/viewInbox"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="View Inbox"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3D7AFD"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/viewCalendarButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/viewStudentInbox"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="View Inbox"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3D7AFD"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/viewCalendarButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
