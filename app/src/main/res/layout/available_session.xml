<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/sessionTutorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutor Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tutorRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating: N/A"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tutorCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Courses Offered" />

        <TextView
            android:id="@+id/sessionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Session Date"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sessionTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session Time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelSessionBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#3F51B5"
                android:text="Cancel Session"
                android:textColor="@android:color/white"
                android:visibility="gone"/>

        </LinearLayout>

        <Button
            android:id="@+id/studentRegisterSessionBtn"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#3F51B5"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/white"
            android:text="Request Session"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>