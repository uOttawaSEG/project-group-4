<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#151A30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/rejectedName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/rejectedEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="#E0E4FF" />

        <TextView
            android:id="@+id/rejectedRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Role"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#AAAAAA" />

        <TextView
            android:id="@+id/rejectedPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Phone"
            android:textColor="#CCCCCC" />

        <TextView
            android:id="@+id/rejectedProgramOrDegree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ProgramOrDegree"
            android:textColor="#CCCCCC" />

        <TextView
            android:id="@+id/rejectedCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#CCCCCC" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="REJECTED"
            android:textColor="#FF5C7A"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/acceptRejectionBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#3D7AFD"
            android:text="Accept"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            android:foreground="?attr/selectableItemBackground" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
