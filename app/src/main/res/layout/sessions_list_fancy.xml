<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/availableSessionsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#101526"
    android:orientation="vertical">

    <Button
        android:id="@+id/fromSessionsToDashBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:text="To Dashboard"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#FF5C7A"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/sessionsLogo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        android:alpha="0.95"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/sessionListTItle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Available Tutoring Sessions"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:iconifiedByDefault="false"
        android:background="@drawable/search_view"
        android:theme="@style/SearchViewTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>