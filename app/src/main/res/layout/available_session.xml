<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#151A30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/sessionTutorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutor Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tutorRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating: N/A"
            android:textSize="14sp"
            android:textColor="#E0E4FF"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tutorCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Courses Offered"
            android:textColor="#CCCCCC"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/sessionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Session Date"
            android:textSize="14sp"
            android:textColor="#CCCCCC" />

        <TextView
            android:id="@+id/sessionTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session Time"
            android:textColor="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelSessionBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#3D7AFD"
                android:text="Cancel Session"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/studentRegisterSessionBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:text="Request Session"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
